pipeline {
    agent any 
    stages {
            def mavenhome = tool name: 'mvn-home', type: 'maven'
        stage('SCM-Checkout') { 
            steps{
	      git branch: 'main" , creditialsId: 'git-cred'
	      url: https://github.com/Cmisenga/web-app2.git 
            }
        } 
        stage('clean-Compile') { 
            steps {
	        echo "clean-compile"
                sh "${mavenhome}/bin/mvn clean compile"
            }
        }
        stage('Package') { 
            steps {
	        echo "package"
                sh "${mavenhome}/bin/mvn package"
            }
        }
    }
}
